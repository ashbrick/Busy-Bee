<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title>Index</title>
    </head>
    <body>
        <% for(let i = 0; i < items.length; i++){ %>
        <h1><%=items[i].toDoItem%> : Item Index</h1>
        <% } %>
        <ul>
            <% for(let i = 0; i < items.length; i++){ %>
                <li>
                    <%=items[i].toDoItem%><br>
                    Completed:
                    <input type="checkbox" name="complete"
                        <% if(items.complete === true){ %>
                            checked
                        <% } %>
                    /><br>
                    <!-- DELETE form -->
                    <form action="/items/<%=items[i].id%>?_method=DELETE" method="POST">
                        <input type="submit" value="DELETE"/>
                    </form>
                    <!-- Link to send user to edit page -->
                    <a href="/items/<%=items[i].id%>/edit">Edit</a>
                </li>
            <% } %>
        </ul>
        <nav>
            <a href="/items/new">Add To-Do Item</a><br>
            <a href="/items-index">Home</a>
        </nav>
    </body>
</html>
