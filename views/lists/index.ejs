<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title>My Lists</title>
    </head>
    <body>
        <h1>My Lists</h1>
        <ul>
            <% for(let i = 0; i < lists.length; i++){ %>
                <li>
                    <a href="/lists/<%=lists[i].id%>">
                        <%=lists[i].name%>
                    </a>
                    <form action="/<%=lists[i].id%>?_method=DELETE" method="POST">
                        <input type="submit" value="DELETE LIST">
                    </form>
                    <a href="/lists/<%=lists[i].id%>/edit">Edit</a>
                </li>
            <% } %>
        </ul>
        <nav>
            <a href="/">Home</a>
        </nav>
    </body>
</html>
